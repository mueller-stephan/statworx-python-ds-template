    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Kedro Run",
            "type": "python",
            "request": "launch",
            "console": "internalConsole",
            "args": [
                "run",
                "--debug" // argument needed for custom hook
            ]
            // Any other arguments should be passed as a comma-seperated-list
            // e.g "args": ["run", "--pipeline", "pipeline_name"]
        },
        {
            "name": "Step: User Defined Run",
            "type": "python",
            "request": "launch",
            "console": "internalConsole",
            "module": "kedro",
            "args": [
                "run",
                "--debug", // argument needed for custom hook
                // "--from-nodes",
                // "starting_node",
                // "--from-inputs",
                // "starting_nput",
            ]
        }
    ]
}