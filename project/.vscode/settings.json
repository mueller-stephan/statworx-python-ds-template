{
    // kedro yml schema
    "yaml.schemas": {
        "https://raw.githubusercontent.com/kedro-org/kedro/develop/static/jsonschema/kedro-catalog-0.17.json": "conf/**/*catalog*"
    },
    // git settings
    "git.ignoreLimitWarning": true,
    // todo-tree
    "todo-tree.filtering.excludeGlobs": [
        "docs",
        ".venv",
    ],
    // autodocstring
    "autoDocstring.docstringFormat": "google",
    "autoDocstring.customTemplatePath": "${workspaceFolder}/.vscode/docstring.template",
    // editor settings
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.rulers": [
        100
    ],
    // python settings
    "python.pythonPath": "${workspaceFolder}/.venv/bin/python3",
    "python.sortImports.path": "${workspaceFolder}/.venv/bin/isort",
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "python.linting.mypyEnabled": true,
}