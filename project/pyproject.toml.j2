[tool.poetry]
name = "{{ package_name }}"
version = "0.1.0"
description = "{{ project_description }}"
authors = ["{{ author_fullname }} <{{ author_email }}>"]
readme = "README.md"

[tool.poetry.dependencies]
python = "~{{ python_version }}"
statworx-theme = ">=0.4.3"
{%- if orchestrator == 'kedro' %}
kedro = "0.18.0"
kedro-mlflow = ">=0.9.0"
kedro-viz = ">=4.3.0"
{%- endif %}
{%- if orchestrator == 'hydra' %}
hydra-core = ">=1.1.2"
{%- endif %}
{%- if orchestrator == 'none' %}
click = ">=8.1.2"
{%- endif %}
{%- if documentation == 'sphinx' %}
seaborn = ">=0.11.2"
{%- endif %}
debugpy = ">=1.5.1"

[tool.poetry.dev-dependencies]
black = ">=22.3.0"
commitizen = ">=2.21.2"
darglint = ">=1.8.1"
flake8 = ">=4.0.1"
ipykernel = ">=6.9.2"
ipython = ">=7.31.1"
{%- if documentation == 'mkdocs' %}
pygments = "2.11.2"             # HACK: upgrading this leads to a bug with mkdocstrings
mkdocs = ">=1.3.0"
mkdocs-material = ">=8.2.8"
mkdocstrings = ">=0.18.1"
mkdocstrings-python = ">=0.6.6"
{%- endif %}
{%- if documentation == 'sphinx' %}
recommonmark = ""
sphinx = ">=3.3.0"
furo = ""
sphinx-autodoc-typehints = ""
sphinx-markdown-builder = ""
myst-parser = ""
{%-endif %}
pytest = ">=7.1.0"
pre-commit = ">=2.18.0"
{%- if use_jupyterlab %}
jupyterlab = ">=3.3.4"
{%- endif %}
{%- if orchestrator == 'kedro' %}

[tool.poetry.scripts]
'{{ package_name }}' = '{{ package_name }}.__main__:main'

[tool.kedro]
package_name = "{{ package_name }}"
project_name = "{{ package_name }}"
project_version = "0.18.0"
{% endif %}
{%- if orchestrator == 'hydra' %}

[tool.poetry.scripts]
'{{ package_name }}' = '{{ package_name }}.cli:main'
{% endif %}
{%- if orchestrator == 'click' %}

[tool.poetry.scripts]
'{{ package_name }}' = '{{ package_name }}.main:main'
{% endif %}
[build-system]
requires = ["poetry-core>=1.0.0"]
build-backend = "poetry.core.masonry.api"
